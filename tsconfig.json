{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "checkJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "noImplicitAny": false,
        "noImplicitThis": false
    },
    "include": [
        //include as you go if intellisense is needed (mui is killing the perf)
        "src"
    ],

    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "**/node_modules/@mui"
    ],

    "typeAcquisition": {
        "exclude": [
            "@mui",
            "@mui/icons-material",
            "@mui/material",
            "@mui/styles"
        ]
    }
}
